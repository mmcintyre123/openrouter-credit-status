{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Vite Dev Server",
            "type": "npm",
            "script": "dev",
            "icon": {
                "id": "rocket",
                "color": "terminal.ansiGreen"
            },
            "isBackground": true,
            "presentation": {
                "group": "servers",
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*Local:.*"
                }
            }
        },
        {
            "label": "Start Flask API with debugpy",
            "type": "shell",
            "command": "python -m debugpy --listen 5678 run_api.py",
            "options": {
                "env": {
                    "NO_PROXY": "localhost,127.0.0.1,::1,openrouter.ai,api.github.com,github.com,.github.com",
                    "no_proxy": "localhost,127.0.0.1,::1,openrouter.ai,api.github.com,github.com,.github.com"
                }
            },
            "icon": {
                "id": "server",
                "color": "terminal.ansiYellow"
            },
            "isBackground": true,
            "presentation": {
                "group": "servers",
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*Running on.*"
                }
            }
        },
        {
            "label": "Start Both Servers",
            "dependsOn": ["Start Vite Dev Server", "Start Flask API with debugpy"],
            "dependsOrder": "parallel",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Cleanup Stale Dev Processes",
            "type": "shell",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"${workspaceFolder}\\.vscode\\scripts\\cleanup-stale-dev-processes.ps1\"",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Cleanup and Restart Servers",
            "dependsOn": ["Cleanup Stale Dev Processes", "Start Both Servers"],
            "dependsOrder": "sequence",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Start Debugger (also launches browser)",
            "command": "${command:workbench.action.debug.start}",
            "detail": "Starts the last run launch config - should be 'Full Stack: Flask API + Browser' both in debug mode",
            "runOptions": {
                "runOn": "folderOpen"
            },
        }
    ]
}
